<h1> <%= pluralize(@articles.count, 'Article') %> Waiting For You </h1>
<ul>
<% @articles.each do  |article|%>
<li><%= link_to article.title, article_path(article) %></li>
<%end%>
</ul>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Importance</th>
  </tr>
  <% @articles.each do  |article|%>
  <tr>
    <td><%= link_to article.title, article_path(article) %></td>
    <td><%=article.body%></td>
    <td><%=article.importance%></td>
  </tr>
  <%end%>

</table>